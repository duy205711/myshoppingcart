%session.col-md-4.col-md-offset-1
  %session.col-md-12
    = label_tag product.name
  %session.col-md-12
    = label_tag product.description
  %session.col-md-12
    = label_tag product.price
%session.col-md-4.col-md-offset-3
  = image_tag(product.picture.url, size: '100x125') if product.picture?
%session.col-md-3.product-item
  .col-sm-3.col-md-offset-2
    = link_to 'Show', product_path(product)
