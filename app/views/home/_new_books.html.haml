%table.fixed-layout.multicolumns-list.template-grid-list.table-width
  %tbody
    %tr
      - products = Product.get_new_book.each do |product|
        %td.product-spacer
        %td.compact
          %form
            .product_thumb
              = link_to image_tag(product.picture.url, border: 0,size: '115x183'), product_path(product), class: 'image-border'
            %p.price-info-nd
              = link_to product.name, product_path(product)
            .price-wrap
            - if product.discount_price.nil?
              %span.price
                %span.price-num= product.price
                %span.price-num đ
            - else
              %span.price.col-md-12
                %span#decoration-text.price-num= product.price
                %span#decoration-text.price-num đ
              %span.price.price.col-md-12
                %span.price-num= product.discount_price
                %span.price-num đ
